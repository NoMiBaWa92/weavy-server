<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" lang="{{ lang }}">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{{ t 'This is a test for {0}' (user.name ?? "@" | string.append user.username) }}</title>
    <style type="text/css">
    {{~ include '_styles' ~}}
    </style>
</head>
<body>
    <center>
        <table border="0" cellpadding="0" cellspacing="0" height="100%" width="100%" id="bodyTable">
            <tr>
                <td align="center" valign="top" id="bodyCell">
                    {{~ # email container ~}}
                    <table border="0" cellpadding="0" cellspacing="0" width="600" id="emailBody">
                        {{~ include '_header' ~}}

                        {{~ # standard module ~}}
                        <tr>
                            <td align="center" valign="top">
                                {{~ # centering table ~}}
                                <table border="0" cellpadding="0" cellspacing="0" width="100%">
                                    <tr>
                                        <td align="center" valign="top">
                                            {{~ # flexible container ~}}
                                            <table border="0" cellpadding="0" cellspacing="0" width="600" class="flexibleContainer">
                                                <tr>
                                                    <td align="center" valign="top" width="600" class="flexibleContainerCell">
                                                        {{~ # content table ~}}
                                                        <table border="0" cellpadding="0" cellspacing="0" width="100%">
                                                            <tr>
                                                                <td valign="top" class="textContent">
                                                                    <h1>Text</h1>
                                                                    <p>{{ t 'This <em>is</em> a <small>test</small> <strong>message</strong> ðŸ˜€' }}</p>

                                                                    <h2>Localization</h2>
                                                                    <p>
                                                                        {{ t 'Language' }}: {{ lang }} <br />
                                                                        {{ t 'Culture' }}: {{ culture }} <br />
                                                                        {{ t 'First day of week is {0}' culture.date_time_format.day_names[culture.date_time_format.first_day_of_week] }}<br />
                                                                        {{ t 'Decimal symbol' }}: {{ culture.number_format.number_decimal_separator }}<br />
                                                                        {{ t 'Time zone' }}: {{ tz }}<br />
                                                                        {{ t 'UTC date' }}: {{ date.utc_now | date.to_string '%FT%T' }}<br />
                                                                        {{ t 'Local date' }}: {{ date.utc_now | date.to_local tz | date.to_string '%FT%T' }}<br />
                                                                        {{ t 'Short date' }}: {{ date.utc_now | date.to_local tz | date.to_string '%x' }}<br />
                                                                        {{ t 'Long date' }}: {{ date.utc_now | date.to_local tz | date.to_string '%A %B %e %Y' }}<br />
                                                                        {{ t 'Short time' }}: {{ date.utc_now | date.to_local tz | date.to_string '%R' }}<br />
                                                                        {{ t 'Long time' }}: {{ date.utc_now | date.to_local tz | date.to_string '%X' }}<br />
                                                                    </p>

                                                                    <h2>Pluralization</h2>

                                                                    <p>
                                                                        {{ t 0 'There is one item.' 'There are {0} items.' }}<br />
                                                                        {{ t 1 'There is one item.' 'There are {0} items.' }}<br />
                                                                        {{ t 2 'There is one item.' 'There are {0} items.' }}<br />
                                                                    </p>
                                                                </td>
                                                            </tr>
                                                        </table>
                                                        
                                                    </td>
                                                </tr>
                                            </table>
                                        </td>
                                    </tr>
                                </table>
                            </td>
                        </tr>
                    </table>

                    {{~ # footer table ~}}
                    <table border="0" cellpadding="0" cellspacing="0" width="600" id="emailFooter">
                        <tr>
                            <td align="center" valign="top">
                                {{~ # centering table ~}}
                                <table border="0" cellpadding="0" cellspacing="0" width="100%">
                                    <tr>
                                        <td align="center" valign="top">
                                            {{~ # flexible container ~}}
                                            <table border="0" cellpadding="0" cellspacing="0" width="600" class="flexibleContainer">
                                                <tr>
                                                    <td align="center" valign="top" width="600" class="flexibleContainerCell">
                                                        {{~ # content table ~}}
                                                        <table border="0" cellpadding="0" cellspacing="0" width="100%">
                                                            <tr>
                                                                <td valign="top" class="footerContent">
                                                                    {{ t 'Some random footer text :)' }}
                                                                </td>
                                                            </tr>
                                                        </table>
                                                    </td>
                                                </tr>
                                            </table>
                                        </td>
                                    </tr>
                                </table>
                            </td>
                        </tr>
                    </table>

                </td>
            </tr>
        </table>
    </center>
</body>
</html>
