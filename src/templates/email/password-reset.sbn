<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" lang="{{ lang }}">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{{ t 'Account recovery' }}</title>
    <style type="text/css">
    {{~ include '_styles' ~}}
    </style>
</head>
<body>
    <center>
        <table border="0" cellpadding="0" cellspacing="0" height="100%" width="100%" id="bodyTable">
            <tr>
                <td align="center" valign="top" id="bodyCell">
                    {{~ # email container ~}}
                    <table border="0" cellpadding="0" cellspacing="0" width="600" id="emailBody">
                        {{~ include '_header' ~}}

                        {{~ # standard module ~}}
                        <tr>
                            <td align="center" valign="top">
                                {{~ # centering table ~}}
                                <table border="0" cellpadding="0" cellspacing="0" width="100%">
                                    <tr>
                                        <td align="center" valign="top">
                                            {{~ # flexible container ~}}
                                            <table border="0" cellpadding="0" cellspacing="0" width="600" class="flexibleContainer">
                                                <tr>
                                                    <td align="center" valign="top" width="600" class="flexibleContainerCell">
                                                        {{~ # content table ~}}
                                                        <table border="0" cellpadding="0" cellspacing="0" width="100%">
                                                            <tr>
                                                                <td valign="top" class="textContent">
                                                                    {{ t 'Hi, someone requested an account recovery for <strong>{0}</strong>.' user.email }}
                                                                </td>
                                                            </tr>
                                                        </table>
                                                    </td>
                                                </tr>
                                            </table>
                                        </td>
                                    </tr>
                                </table>
                            </td>
                        </tr>

                        {{~ # button module ~}}
                        <tr>
                            <td align="center" valign="top">
                                {{~ # centering table ~}}
                                <table border="0" cellpadding="0" cellspacing="0" width="100%">
                                    <tr>
                                        <td align="center" valign="top">
                                            {{~ # flexible container ~}}
                                            <table border="0" cellpadding="0" cellspacing="0" width="600" class="flexibleContainer">
                                                <tr>
                                                    <td align="center" valign="top" width="600" class="flexibleContainerCell bottomShim">
                                                        {{~ # content table ~}}
                                                        <table border="0" cellpadding="0" cellspacing="0" width="260" class="emailButton">
                                                            <tr>
                                                                <td align="center" valign="middle" class="buttonContent">
                                                                    <a href="/admin/reset/{{ token }}" target="_blank">{{ t 'Reset password' }} </a>
                                                                </td>
                                                            </tr>
                                                        </table>
                                                    </td>
                                                </tr>
                                            </table>
                                        </td>
                                    </tr>
                                </table>                                
                            </td>
                        </tr>


                        {{~ # standard module ~}}
                        <tr>
                            <td align="center" valign="top">
                                {{~ # centering table ~}}
                                <table border="0" cellpadding="0" cellspacing="0" width="100%">
                                    <tr>
                                        <td align="center" valign="top">
                                            {{~ # flexible container ~}}
                                            <table border="0" cellpadding="0" cellspacing="0" width="600" class="flexibleContainer">
                                                <tr>
                                                    <td align="center" valign="top" width="600" class="flexibleContainerCell">
                                                        {{~ # content table ~}}
                                                        <table border="0" cellpadding="0" cellspacing="0" width="100%">
                                                            <tr>
                                                                <td valign="top" class="textContent">
                                                                    {{ t 'If you would like to reset your password, just click the button above within 15 minutes, and we’ll automatically log you in afterwards.' }}
                                                                </td>
                                                            </tr>
                                                        </table>
                                                    </td>
                                                </tr>
                                            </table>
                                        </td>
                                    </tr>
                                </table>
                            </td>
                        </tr>

                    </table>


                    {{~ # footer table ~}}
                    <table border="0" cellpadding="0" cellspacing="0" width="600" id="emailFooter">
                        <tr>
                            <td align="center" valign="top">
                                {{~ # centering table ~}}
                                <table border="0" cellpadding="0" cellspacing="0" width="100%">
                                    <tr>
                                        <td align="center" valign="top">
                                            {{~ # flexible container ~}}
                                            <table border="0" cellpadding="0" cellspacing="0" width="600" class="flexibleContainer">
                                                <tr>
                                                    <td align="center" valign="top" width="600" class="flexibleContainerCell">
                                                        {{~ # content table ~}}
                                                        <table border="0" cellpadding="0" cellspacing="0" width="100%">
                                                            <tr>
                                                                <td valign="top" class="footerContent">
                                                                    {{ t 'If you don’t want to change your password, you can safely ignore this email.' }}
                                                                </td>
                                                            </tr>
                                                        </table>
                                                    </td>
                                                </tr>
                                            </table>
                                        </td>
                                    </tr>
                                </table>
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>
        </table>
    </center>
</body>
</html>
